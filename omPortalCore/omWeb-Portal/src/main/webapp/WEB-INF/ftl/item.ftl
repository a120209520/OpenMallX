    </head>
	<body>
    	<!-- HEADER -->
        <#include "common/header.ftl"/>

    	<!-- NAVIGATION -->
        <#include "common/navigation.ftl"/>

		<!-- SECTION -->
		<div class="section">
			<!-- container -->
			<div class="container">
				<!-- row -->
				<div class="row">
					<!-- Product main img -->
					<div class="col-md-5 col-md-push-2">
						<div id="product-main-img">
							<div class="product-preview">
								<img src="${item.images[0]}" alt="">
							</div>
						</div>
					</div>
					<!-- /Product main img -->

					<!-- Product thumb imgs -->
					<div class="col-md-2  col-md-pull-5">
						<div id="product-imgs">
                            <#list item.images as node>
                                <div class="product-preview">
                                    <img src="${node}" alt="">
                                </div>
							</#list>
						</div>
					</div>
					<!-- /Product thumb imgs -->

					<!-- Product details -->
					<div class="col-md-5">
						<div class="product-details">
							<h2 class="product-name">${item.title}</h2>
							<div>
								<div class="product-rating">
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star"></i>
									<i class="fa fa-star-o"></i>
								</div>
								<a class="review-link" href="#">${item.num}件剩余</a>
							</div>
							<div>
                                <h3 class="product-price-prefix">RMB:</h3>
								<h3 class="product-price">${item.price?c}</h3>
								<span class="product-available">In Stock</span>
							</div>
							<p>${item.sellPoint}</p>

							<div class="add-to-cart">
								<div class="qty-label">
									数量
									<div class="input-number">
										<input type="number" value="1">
										<span class="qty-up">+</span>
										<span class="qty-down">-</span>
									</div>
								</div>
								<button class="add-to-cart-btn"><i class="fa fa-shopping-cart"></i>添加到购物车</button>
							</div>

							<ul class="product-btns">

							</ul>

							<ul class="product-links">
                                <li><a href="#"><i class="fa fa-heart-o"></i>收藏</a></li>
                                <li><a href="#"><i class="fa fa-share-alt"></i>分享</a></li>
								<li><a href="#"><i class="fa fa-wechat"></i></a></li>
								<li><a href="#"><i class="fa fa-qq"></i></a></li>
								<li><a href="#"><i class="fa fa-weibo"></i></a></li>
							</ul>

						</div>
					</div>
					<!-- /Product details -->

					<!-- Product tab -->
					<div class="col-md-12">
						<div id="product-tab">
							<!-- product tab nav -->
							<ul class="tab-nav">
								<li class="active"><a data-toggle="tab" href="#tab1">商品详情</a></li>
								<li><a data-toggle="tab" href="#tab3">Reviews (3)</a></li>
							</ul>
							<!-- /product tab nav -->

							<!-- product tab content -->
							<div class="tab-content">
								<!-- tab1  -->
								<div id="tab1" class="tab-pane fade in active">
									<div class="row">
                                        <div class="col-md-1"></div>
										<div class="col-md-11">
											<p>${itemDesc.itemDesc!}</p>
										</div>
									</div>
								</div>
								<!-- /tab1  -->

								<!-- tab3  -->
								<div id="tab3" class="tab-pane fade in">
									<div class="row">
										<!-- Rating -->
										<div class="col-md-3">
											<div id="rating">
												<div class="rating-avg">
													<span>4.5</span>
													<div class="rating-stars">
														<i class="fa fa-star"></i>
